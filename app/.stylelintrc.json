{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "selector-no-qualifying-type": [
            true,
            {
                "ignore": ["class", "id"]
            }
        ],
        "max-nesting-depth": 3,
        "selector-max-id": 1,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["tailwind"]
            }
        ]
    }
}
